% CircuiTikz Configuration for Technikum Theme
% Styles and configurations for electrical circuit diagrams

% =============================================================================
% COLOR DEFINITIONS
% =============================================================================

% Define circuit diagram colors for consistency
\colorlet{icolor}{red!90!black}
\colorlet{vcolor}{fhtw-blue}

% =============================================================================
% CIRCUITIKZ GLOBAL SETTINGS
% =============================================================================

\ctikzset{
    % Visual styling
    bipole current style/.append style = {
            color=icolor
        },
    bipole voltage style/.append style = {
            color=vcolor
        },
    voltage = straight,
    % Predefined convenience styles
    nvi/.style = { no v symbols, no i symbols },
}

% =============================================================================
% CUSTOM CIRCUIT COMPONENTS
% =============================================================================

% Add custom component definitions here as needed
